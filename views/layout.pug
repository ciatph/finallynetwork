doctype html
html
  head
    title= title
    if theme
      if theme == 'campfire'
        link(rel='stylesheet', href=`/css/bootstrap.min.css`)
      link(rel='stylesheet', href=`/css/${theme}-theme.css`)
    else
      link(rel='stylesheet', href=`/css/main.css`)

  body
    block content
    if theme
      script(src=`/${theme}-theme.js`)
    else
      script(src="/main.js")
